---
layout: default
---

<header class="header">
	<% if @error: %>
		<h1>
			<%= @site.title %>
		</h1>
		<h2>
			<%= @site.description %>.
		</h2>
	<% else: %>
		<h1>
			<%= @site.title %>
		</h1>
		<h2>
			<%= @site.description %> &mdash; all <%= @listing.length %> of them!
		</h2>
	<% end %>
</header>

<article>
	<%- @content %>
</article>

<!-- DocPad Scripts + Our Own -->
<%- @getBlock('scripts').add(@site.scripts).toHTML() %>
